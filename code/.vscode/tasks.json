// .vscode/tasks.json
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift-build",
            "type": "shell",
            "command": "/swift-tensorflow-toolchain/usr/bin/swift",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "build",
                "-c",
                "debug",
                "--build-path",
                "/root/.build"
            ]
        },
        {
            "label": "swift-build2",
            "type": "shell",
            "command": "/swift-tensorflow-toolchain/usr/bin/swift",
            "args": [
                "build",
                "-c",
                "debug",
                "--build-path",
                "/root/.build"
            ]
        },
        {
            "label": "swift-build-tests",
            "type": "process",
            "command": "swift",
            "group": "build",
            "args": [
                "build",
                "-c",
                "debug",
                "--enable-test-discovery",
                "--target",
                "MotionDatasetTests",
                "--build-path",
                "/root/.build"
            ]
        }
    ]
}
